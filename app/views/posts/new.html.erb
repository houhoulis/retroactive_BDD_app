<h1>New post</h1>

<% form_for([@author,@post]) do |f| %>
, :url => new_author_post_path(@author)) do |f| %->
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', author_posts_path %>