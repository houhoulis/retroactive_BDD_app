<h1>New post</h1>

<% form_for([@author,@post]) do |f| %>
  <%= f.error_messages %>

  <p>
    <!--%= f.label :author %--><br />
    <%= f.hidden_field :author_id, :value => @author.id %>
  </p>


  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', author_path(@author) %>