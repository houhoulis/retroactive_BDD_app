<h1>Editing comment</h1>

<% form_for([@author,@post,@comment]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', author_post_comment_path(@author,@post,@comment) %> |
<%= link_to 'Back', author_post_path(@author,@post) %>